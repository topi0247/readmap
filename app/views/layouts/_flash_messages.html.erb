<% if flash.any? %>
  <div class="container mx-auto px-4 py-4">
    <% flash.each do |message_type, message| %>
      <div class="alert shadow-lg mb-4 <%= message_type_class(message_type) %> alert-soft %> flex justify-between">
        <div class="flex items-center">
          <%= message_type_icon(message_type) %>
          <span><%= message %></span>
        </div>
        <button class="btn btn-sm btn-ghost" onclick="this.parentElement.remove()">âœ•</button>
      </div>
    <% end %>
  </div>
<% end %>