<article class="flex flex-col items-center justify-center gap-8 w-full">
  <h1 class="zen-maru-gothic-bold text-4xl text-center mb-4"><%= title "リストの新規作成" %></h1>
  <%= form_with(model: @list, local: true, class: "space-y-4") do |form| %>
    <%= render 'form', form: form %>
    <div class="form-control">
      <%= form.submit "作成", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
  <%= link_to "戻る", lists_path, class: "link" %>
</article>