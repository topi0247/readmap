<section>
  <h1>書籍検索</h1>
  <%= form_with url: new_list_book_path(@list), method: :get, local: true do |form| %>
    <%= form.text_field :title, placeholder: "書籍タイトル" %>
    <%= form.submit "検索" %>
  <% end %>
</section>


<% if @result.present? %>
  <section>
    <h1>書籍一覧</h1>
    <table>
      <thead>
        <tr>
          <th>タイトル</th>
          <th>表紙</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @result[:books].each do |book| %>
          <%= render 'book', book: book %>
        <% end %>
      </tbody>
    </table>
  </section>
<% end %>