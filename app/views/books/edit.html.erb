<h1 class="font-bold text-4xl">書籍編集ページ</h1>
<div>
  <dl>
    <dt>タイトル:</dt>
    <dd><%= @book.title %></dd>
    <dt>表紙画像:</dt>
    <dd>
      <img src="<%= @book.cover_image_url %>" alt="<%= @book.title %> 表紙" class="book-cover">
    </dd>
  </dl>
  <%= form_with model: @list_book, url: list_book_path(list_id: @list.id, id: @book.id), data: { turbo: true } do |f| %>
    <div class="flex flex-col">
      <%= f.date_field :read_completed_at, required: true %>
      <%= f.text_field :comment, placeholder: 'コメント' %>
      <%= f.submit "更新", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to '戻る', request.referer || list_book_path(list_id: @list_book.list_id, id: @book.id), class: "link" %>
</div>